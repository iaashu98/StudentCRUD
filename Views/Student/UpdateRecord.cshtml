@model StudentModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Update Record</title>
</head>
<body>

    <div>
        @{
            foreach (System.Data.DataRow dr in ViewBag.empRecord.Rows)
            {
                <form method="post">
                    <div class="form-group col-md-6">
                        <label class="required">Name</label>
                        <input type="text" class="form-control" value="@dr["S_Name"]" name="Name" placeholder="Your Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label>Age</label>
                        <input type="number" class="form-control" value="@dr["S_Age"]" name="Age" placeholder="Your Age">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Address</label>
                        <input type="text" class="form-control" value="@dr["S_Address"]" name="Address" placeholder="1234 Main St">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="required">Subject Opted</label>
                        <input type="text" class="form-control" value="@dr["Subject_opted"]" name="Subject_Opted" placeholder="Maths, Bio, Physics">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <button type="submit" class="btn btn-primary my-md-2">Save</button>
                        <button type="button" class="btn btn-danger my-md-2" onclick="javascript:document.location.href='@Url.Action("ShowDeatils", "Student")'">Cancel</button>
                    </div>
                </form>
            }
        }

    </div>
    <style>
        .required:after {
            content: " *";
            color: red;
        }
    </style>
</body>
</html>
